Algoritmo "duracao"

Var
       duracao,resto,min,hor, seg : inteiro
Inicio

       escreva("Digite a duracao em segundos: ")
       leia(duracao)

       hor <- duracao \ 3600
       resto <- duracao mod 3600
        min <- resto \ 60
        seg <- resto mod 60



        escreva(hor,":",min,":",seg)

      
      

          
          
          
         
         
         




Fimalgoritmo